// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and account management
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String // Hashed password
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  jobs    Job[]
  apiKeys ApiKey[]
}

// API Keys for external services (Gemini, etc.)
model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  service   String // "gemini", "openai", etc.
  key       String // Encrypted
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, service])
}

// Job model for tracking background tasks
model Job {
  id       String @id @default(cuid())
  userId   String
  type     String // "query_generator", "gmaps_scraper", "data_cleaner", etc.
  status   String @default("pending") // "pending", "running", "completed", "failed", "paused"
  progress Int    @default(0)
  total    Int?

  // Input configuration
  config Json

  // Results
  result Json?
  error  String?

  // File storage
  inputFile  String? // S3/local path
  outputFile String? // S3/local path

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([createdAt])
}

// Scraped business data
model Business {
  id       String  @id @default(cuid())
  name     String
  phone    String?
  website  String?
  email    String?
  rating   Float?
  reviews  Int?
  address  String?
  category String?

  // AI Analysis results
  issues    String? // JSON array of issues
  solutions String? // JSON array of solutions

  // Metadata
  source String // "gmaps", "manual", etc.
  jobId  String? // Reference to Job that created this

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([website])
  @@index([email])
}

// Location data cache (from Geonames API)
model Country {
  id          String  @id @default(cuid())
  geonameId   Int     @unique
  countryCode String  @unique // "US", "CA", "GB"
  countryName String // "United States", "Canada"
  continent   String?
  capital     String?
  population  BigInt?

  states State[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([countryCode])
}

model State {
  id          String @id @default(cuid())
  geonameId   Int    @unique
  stateCode   String // "ID", "NY", "CA"
  stateName   String // "Idaho", "New York"
  countryId   String
  countryCode String

  country Country @relation(fields: [countryId], references: [id], onDelete: Cascade)
  cities  City[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([countryCode, stateCode])
  @@index([countryCode])
}

model City {
  id          String @id @default(cuid())
  geonameId   Int    @unique
  cityName    String
  stateId     String
  stateCode   String
  countryCode String
  latitude    Float?
  longitude   Float?
  population  Int?

  state State @relation(fields: [stateId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([stateCode, cityName, countryCode])
  @@index([stateCode])
  @@index([countryCode])
}
